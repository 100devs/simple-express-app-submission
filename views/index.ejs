<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <!--EXTERNAL LINKS-->
    <link rel="stylesheet" href="/style.css">
    <!--FONT-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet">
    <!--ICONS-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>
    <section class= "todo-container">
        <h2>TO DO LIST</h2>
        <section class="todo">
            <form action="/" method="POST" class="todo-header">
                <input type="text" name="title" placeholder="title">
                <textarea rows="6" name="content" cols="45" placeholder="content"></textarea>
                <button type="submit"><span class="fas fa-plus"></span> Add Text</button>
            </form>
            <ul class="todo-list">
                <% todoTasks.forEach(task => {%>
                <li class="todo-list-item">
                    <div class="todo-list-item-title">
                        <%= task.title %> 
                    </div>
                    <div class="todo-list-item-content">
                        <%= task.content %> 
                    </div>
                    <a href="/edit/<%=task._id %>" class="edit"><span class="fas fa-edit"></span></a>
                    <a href="/remove/<%=task._id %>" class="remove"><span class="fas fa-times"></span></a>
                </li>
                <% }) %>
            </ul>
        </section>
    </section>
</body>
</html>