    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <header></header>
    <section class="thoughtCluster">
        <section class="submit">
            <h1>what's on your mind?</h1>
            <form action="/addThought" method="POST">
                <textarea class="textInput" type="text" placeholder="think something..." name="thought"></textarea>
                <textarea class="textInput" type="text" placeholder="...leave a parting note, if it pleases you" name="signoff"></textarea>
                <input class="submitButton" type="submit">
            </form>    
        </section>

        <h2>more thoughts:</h2>
        <ul class="thinkingthings">
            <% for(let i=0; i < info.length ; i++) {%>
                <li class="thought">
                    <p><%= info[i].thought %></p>
                    <p class="signoff"><%= info[i].signoff %></p>
                    <!-- <div class="interact"> -->
                        <span class="likes"><%= info[i].likes %></span>
                        <span class="fa fa-arrow-up like"></span>
                        <span class="fa fa-arrow-down"></span>
                        <span class='fa fa-trash'></span>
                    <!-- </div> -->
                </li>
            <% } %>
        </ul>

    </section>

    <script src='js/main.js'></script>
</body>
</html>
