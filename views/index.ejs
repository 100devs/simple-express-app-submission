                    <h1>What Are Your <span class="text-warning">NetDesigner Woes</span>?</h1>
                    <p class="lead my-4">
                        NetDesigner sucks! We all have had many problems with this software. Let's come together,
                        document our issues and get them fixed!
                    </p>
                </div>
                <img class="img-fluid w-50 d-none d-sm-block" src="img/undraw_process_re_gws7.svg"
                    alt="Undraw Process Image">
            </div>
        </div>
    </section>

    <!-- Input Woes -->
    <section id="problem" class="p-4 text-center text-sm-start">
        <div class="container">
            <div class="d-md-flex justify-content-between align-items-center">
                <h2>What's the Problem?</h2>
                <form action="/" method="POST">
                    <input type="text" placeholder="Name" name="name" required="required">
                    <input type="text" placeholder="Issue" name="issue" required="required">
                    <input type="text" placeholder="Wishes" name="wishes">
                    <input type="text" placeholder="Action Taken" name="actionTaken">
                    <input type="text" placeholder="Solution" name="solution">
                    <button type="submit">Submit</button>
                </form>
            </div>
    </section>

    <!-- Woes Table -->
    <section id="problem" class="p-4 text-center text-sm-start">
        <div class="container">
            <div class="d-md-flex flex-column justify-content-between align-items-center">
                <!-- <h2>List of Woes:</h2> -->
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Issue</th>
                            <th scope="col">Wishes</th>
                            <th scope="col">Action Taken</th>
                            <th scope="col">Solution</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% netdesignerTasks.forEach(content=>{%>
                            <tr>
                                <td>
                                    <%= content.name %>
                                </td>
                                <td>
                                    <%= content.issue %>
                                </td>
                                <td>
                                    <%= content.wishes %>
                                </td>
                                <td>
                                    <%= content.actionTaken %>
                                </td>
                                <td>
                                    <%= content.solution %>
                                </td>
                                <td><a href="/edit/<%=content._id %>" class="edit"><i
                                            class="bi bi-pencil-square"></i></a>
                                </td>
                                <td>
                                    <a href="/remove/<%=content._id %>" class="remove"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
