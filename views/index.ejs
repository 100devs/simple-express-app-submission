<body>
    <h1>The Category is Books!</h1>
    <h2>Share your favorite LGBTQIA+ book</h2>
    <ul className="books">
    <% for(let i=0; i < info.length; i++) {%>
        <li class="books">
            <span><%= info[i].bookName %></span>
            <span><%= info[i].authorName %></span>
            <p><%= info[i].reasonForLiking %></p>
            <span><%= info[i].likes %></span>
            <span class='fa fa-thumbs-up'></span>
            <!-- <span class='fa fa-trash'></span> -->
        </li>
    <% } %>
    </ul>

    
    <h2>Add A Book:</h2>

    <form action="/addBook" method="POST">
        <input type="text" placeholder="Book Name" name="bookName">
        <input type="text" placeholder="Author Name" name="authorName">
        <input type="text" class="long-text" placeholder="Reason You like this Book...." name="reasonForLiking">
        <!-- <input type="submit"> -->
        <button class="btn btn-2 btn-2b">Add Book</button>
    </form>

